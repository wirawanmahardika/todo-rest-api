generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  fullname String
  email String
  username String
  password String

  Todo Todo[]
}

model Todo {
  id Int @id @default(autoincrement()) 
  id_user Int
  activity String

  user User @relation(fields: [id_user], references: [id], onDelete: Cascade, onUpdate: Cascade)
}